---
// Library imports
import { cx } from "classix"
import { Picture } from "astro:assets"

// Project imports
import Layout from "../layouts/Layout.astro"
import Section from "layouts/Section.astro"
import { Timeline } from "components/react/work-timeline"
import DownArrow from "components/svg/DownArrow.astro"
import image from "../assets/placeholder.jpeg"
---

<Layout title="Tim Tonelli">
  <main>
    <div class="space-y-12 sm:space-y-6">
      <Section>
        <Picture
          class="rounded-full shadow-lg w-[100px] md:w-[150px]"
          src={image}
          alt="portrait"
          widths={[240, 540, 720, image.width]}
          sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${image.width}px`}
        />
        <div class="mx-auto max-w-2xl">
          <h1 class="mt-6 text-3xl font-bold md:text-4xl">
            ðŸ‘‹ I'm Tim and I'm from the Boston area
          </h1>
          <div class="mt-3 space-y-3 text-zinc-600 dark:text-zinc-200">
            <p>
              I'm a software engineer, and I love to build things. Right now I
              am learning Rust, and focusing on backend and systems programming.
              I work at a startup based out of Somerville, MA where I work on
              services and tools for the core platform.
            </p>
            <p>
              Outside of programming, I like to tinker with mechanical
              keyboards, play video games, and spend time with my partner Clare.
            </p>
          </div>
        </div>
      </Section>

      <Section id="work" divider heading="Work">
        <Timeline client:load />
        <div class="mt-6 flex justify-end">
          <a
            class={cx(
              "flex text-sm items-center gap-2 rounded-lg px-6 py-2 bg-zinc-100",
              "hover:transition-colors hover:text-teal-500 active:bg-zinc-200/60",
              "dark:bg-zinc-800 dark:text-zinc-300",
              "dark:hover:text-teal-400 dark:active:bg-zinc-700/50",
            )}
            download="Tim Tonelli Resume April 2023.pdf"
            href="public/TimTonelliResume.pdf"
          >
            Download CV
            <span>
              <DownArrow />
            </span>
          </a>
        </div>
      </Section>
    </div>
  </main>
</Layout>
