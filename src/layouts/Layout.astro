---
import Head from "@layouts/Head.astro"
import { Header } from "@components/react/header"
import InfiniteBackground from "@layouts/InfiniteBackground.astro"
import Footer from "@layouts/Footer.astro"

export interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html class="scroll-smooth" lang="en">
  <Head title={title} />
  <body class="bg-zinc-50 text-zinc-800 dark:bg-black dark:text-zinc-100">
    <InfiniteBackground>
      <div class="space-y-12 sm:space-y-6">
        <Header client:load />
        <slot />
        <Footer />
      </div>
    </InfiniteBackground>
  </body>
</html>
